<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <!-- cdn font awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- and cdn awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-secondary-subtle">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav" style="padding-right: 50px">
          <a href="" class="text-decoration-none text-black"><img src="https://cdn4.iconfinder.com/data/icons/seo-web-blue-1/100/seo__web_blue_1_25-512.png" class="rounded-circle" alt="..." style="width: 40px;" />
            {{#if user}}
              {{user.name}}{{else}}Guest{{/if}}
          </a>
          <ul class="navbar-nav">
            {{#if user}}
              <li class="nav-item">
                <a class="nav-link active border btn btn-warning" href="/logout">Logout</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link active border btn btn-warning" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active border btn btn-warning" href="/register">Register</a>
              </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
    <!-- and navbar -->
    <!--  -->
    <section class="mt-5">
      <div class="row">
        <div class="col-md-4 d-flex justify-content-center">
          <h1>Colections</h1>
        </div>
        <div class="row d-flex justify-content-start mt-5">
          {{#each data}}
            <div class="col-md-4 d-flex justify-content-center">
              <div class="card mb-3 bg-secondary-subtle" style="width: 18rem">
                {{#if isOwner}}
                  <div class="d-flex justify-content-between">
                    <form action="/delete-collection/{{id}}" method="POST" style="display: inline;">
                      <button type="submit" class="btn btn-danger" style="width: 140px;">Delete</button>
                    </form>
                    <a href="/edit-collection?id={{id}}">
                      <button type="button" class="btn btn-warning" style="width: 140px;">Edit</button>
                    </a>
                  </div>
                {{/if}}
                <div class="card-body mt-4">
                  <i class="fa-solid fa-file fa-2xl"></i>
                  <a href="/detail/{{id}}" class="text-decoration-none text-black"><h5 class="card-title mt-5">{{name}}</h5></a>
                  <div class="d-flex justify-content-between" style="align-items: center">
                    <p class="card-text">{{completedTasks}} / {{tasks.length}}</p>
                    {{#if (eq completedTasks tasks.length)}}
                      <P class="d-flex align-items-center"> <i class="fa-solid fa-circle-check fa-xl d-flex align-items-center"></i></P>
                    {{else}}
                      <p><i class="fa-solid fa-clock fa-lg"></i> </p>
                    {{/if}}
                  </div>
                </div>
              </div>
            </div>
          {{/each}}

          <div class="col-md-4 d-flex justify-content-center">
            <div class="card mb-3 p-4 border-3" style="width: 18rem">
              <div class="card-body text-center p-5">
                {{#if user}}
                  <a href="/add-collections" class="border rounded-4 bg-secondary-subtle p-4">
                    <i class="fa-solid fa-plus fa-2xl"></i>
                  </a>
                {{else}}
                  <a href="/register" class="border rounded-4 bg-secondary-subtle p-4">
                    <i class="fa-solid fa-plus fa-2xl"></i>
                  </a>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--  -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>